<% content_for :title, "Add New RSVP" %>

<!-- Admin Navigation Bar -->
<nav class="bg-[#3f4f3d] shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <h1 class="text-xl font-bold text-white antic-didone-regular">Wedding Admin</h1>
        </div>
        <div class="ml-6 flex space-x-8">
          <%= link_to "Dashboard", admin_dashboard_path, class: "text-white/80 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "RSVPs", admin_rsvps_path, class: "text-white/80 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <span class="text-white/80 text-sm pinyon-script-regular">Eric & Hayley â€¢ 10.18.25</span>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, 
            class: "bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" %>
      </div>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <%= link_to admin_dashboard_path, class: "inline-flex items-center text-sm font-medium text-gray-700 hover:text-[#3f4f3d]" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
            </svg>
            Dashboard
          <% end %>
        </li>
        <li>
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <%= link_to "RSVPs", admin_rsvps_path, class: "ml-1 text-sm font-medium text-gray-700 hover:text-[#3f4f3d] md:ml-2" %>
          </div>
        </li>
        <li aria-current="page">
          <div class="flex items-center">
            <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Add New RSVP</span>
          </div>
        </li>
      </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-gray-900 antic-didone-regular">Add New RSVP</h2>
      <p class="mt-2 text-gray-600">Manually add a guest response to the wedding invitation</p>
    </div>

    <!-- Form -->
    <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h3 class="text-lg font-semibold text-gray-900">Guest Information</h3>
      </div>
      
      <%= form_with model: [:admin, @rsvp], local: true, class: "p-6 space-y-6" do |form| %>
        <% if @rsvp.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc list-inside space-y-1">
                    <% @rsvp.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Personal Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :first_name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3f4f3d] focus:border-transparent",
                placeholder: "First name" %>
          </div>
          <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :last_name, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3f4f3d] focus:border-transparent",
                placeholder: "Last name" %>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.email_field :email, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3f4f3d] focus:border-transparent",
                placeholder: "email@example.com" %>
          </div>
          <div>
            <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.telephone_field :phone_number, 
                class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3f4f3d] focus:border-transparent",
                placeholder: "(555) 123-4567" %>
          </div>
        </div>

        <!-- Attendance -->
        <div>
          <%= form.label :present, "Will you be attending?", class: "block text-sm font-medium text-gray-700 mb-3" %>
          <div class="space-y-3">
            <div class="flex items-center">
              <%= form.radio_button :present, true, class: "h-4 w-4 text-[#3f4f3d] focus:ring-[#3f4f3d] border-gray-300" %>
              <%= form.label :present_true, "Yes, I'll be there!", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
            <div class="flex items-center">
              <%= form.radio_button :present, false, class: "h-4 w-4 text-[#3f4f3d] focus:ring-[#3f4f3d] border-gray-300" %>
              <%= form.label :present_false, "Sorry, can't make it", class: "ml-3 text-sm font-medium text-gray-700" %>
            </div>
          </div>
        </div>

        <!-- Number of Guests -->
        <div>
          <%= form.label :guests, "Number of additional guests (not including yourself)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :guests, 
              min: 0, max: 5, value: @rsvp.guests || 0,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3f4f3d] focus:border-transparent" %>
          <p class="mt-1 text-sm text-gray-500">Enter 0 if just yourself, 1 if bringing a +1, etc.</p>
        </div>

        <!-- Dietary Restrictions -->
        <div>
          <%= form.label :dietary_restrictions, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :dietary_restrictions, rows: 3,
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#3f4f3d] focus:border-transparent",
              placeholder: "Please let us know about any dietary restrictions, allergies, or special meal requirements..." %>
        </div>

        <!-- Form Actions -->
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <%= link_to admin_rsvps_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#3f4f3d]" do %>
            Cancel
          <% end %>
          
          <%= form.submit "Create RSVP", class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-[#3f4f3d] hover:bg-[#2d3a2b] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#3f4f3d] transition-colors" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
