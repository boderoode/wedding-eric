<% content_for :title, "Manage RSVPs" %>

<!-- Admin Navigation Bar -->
<nav class="bg-[#3f4f3d] shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <h1 class="text-xl font-bold text-white antic-didone-regular">Wedding Admin</h1>
        </div>
        <div class="ml-6 flex space-x-8">
          <%= link_to "Dashboard", admin_dashboard_path, class: "text-white/80 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "RSVPs", admin_rsvps_path, class: "text-white hover:text-white/80 px-3 py-2 rounded-md text-sm font-medium border-b-2 border-white" %>
        </div>
      </div>
      
      <div class="flex items-center space-x-4">
        <span class="text-white/80 text-sm pinyon-script-regular">Eric & Hayley • 10.18.25</span>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, 
            class: "bg-white/10 hover:bg-white/20 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" %>
      </div>
    </div>
  </div>
</nav>

<!-- Main Content -->
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Page Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 antic-didone-regular">All RSVPs</h2>
          <p class="mt-2 text-gray-600">Manage and track all wedding guest responses</p>
        </div>
        <%= link_to new_admin_rsvp_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-[#3f4f3d] hover:bg-[#2d3a2b] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#3f4f3d] transition-colors" do %>
          <svg class="-ml-1 mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add New RSVP
        <% end %>
      </div>
    </div>

    <!-- Stats Summary -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
      <!-- Total Invitees -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-200">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Invitees</p>
              <p class="text-2xl font-bold text-gray-900"><%= @total_invitees %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Responded -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-200">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Responded</p>
              <p class="text-2xl font-bold text-indigo-600"><%= @rsvps.count %></p>
              <p class="text-xs text-gray-500 mt-1"><%= @rsvps.count > 0 ? ((@rsvps.count.to_f / @total_invitees) * 100).round(1) : 0 %>% response rate</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Accepted -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-200">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Attending</p>
              <p class="text-2xl font-bold text-green-600"><%= @accepted_rsvps.count %></p>
              <p class="text-xs text-gray-500 mt-1"><%= @accepted_rsvps.count > 0 ? ((@accepted_rsvps.count.to_f / @total_invitees) * 100).round(1) : 0 %>% of invitees</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Declined -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-200">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Declined</p>
              <p class="text-2xl font-bold text-red-600"><%= @declined_rsvps.count %></p>
              <p class="text-xs text-gray-500 mt-1"><%= @declined_rsvps.count > 0 ? ((@declined_rsvps.count.to_f / @total_invitees) * 100).round(1) : 0 %>% of invitees</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Pending -->
      <div class="bg-white overflow-hidden shadow-lg rounded-xl border border-gray-200">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium text-gray-500 uppercase tracking-wide">Pending</p>
              <p class="text-2xl font-bold text-yellow-600"><%= @pending_count %></p>
              <p class="text-xs text-gray-500 mt-1">No response yet</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- RSVPs Table -->
    <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">All Wedding RSVPs</h3>
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-500"><%= @rsvps.count %> total responses</span>
          </div>
        </div>
      </div>
      
    <!-- Invitees Table -->
    <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">Wedding Guest List</h3>
          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-500"><%= @total_invitees %> invitees • <%= @rsvps.count %> responses</span>
          </div>
        </div>
      </div>
      
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Guest Name</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Response Status</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Guests</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Response Date</th>
              <th scope="col" class="relative px-6 py-3"><span class="sr-only">Actions</span></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @invitees.each do |invitee| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 rounded-full bg-[#3f4f3d] flex items-center justify-center">
                        <span class="text-sm font-medium text-white"><%= invitee[:first_name][0] %><%= invitee[:last_name][0] %></span>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case invitee[:status] %>
                  <% when 'attending' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                        <circle cx="4" cy="4" r="3" />
                      </svg>
                      Attending
                    </span>
                  <% when 'declined' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-red-400" fill="currentColor" viewBox="0 0 8 8">
                        <circle cx="4" cy="4" r="3" />
                      </svg>
                      Declined
                    </span>
                  <% when 'pending' %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                      <svg class="-ml-0.5 mr-1.5 h-2 w-2 text-yellow-400" fill="currentColor" viewBox="0 0 8 8">
                        <circle cx="4" cy="4" r="3" />
                      </svg>
                      No Response
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% if invitee[:rsvp] && invitee[:status] == 'attending' %>
                    <%= invitee[:rsvp].guests + 1 %>
                  <% elsif invitee[:status] == 'declined' %>
                    0
                  <% else %>
                    <span class="text-gray-400">—</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if invitee[:rsvp] %>
                    <div class="text-sm text-gray-900"><%= invitee[:rsvp].email %></div>
                    <div class="text-sm text-gray-500"><%= invitee[:rsvp].phone_number %></div>
                  <% else %>
                    <span class="text-gray-400 text-sm">No contact info</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if invitee[:rsvp] %>
                    <%= invitee[:rsvp].created_at.strftime("%b %d, %Y") %>
                  <% else %>
                    <span class="text-gray-400">—</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center justify-end space-x-2">
                    <% if invitee[:rsvp] %>
                      <!-- Has responded - show view/edit/delete -->
                      <%= link_to admin_rsvp_path(invitee[:rsvp]), class: "text-[#3f4f3d] hover:text-[#2d3a2b] p-1 rounded-md hover:bg-gray-100", title: "View Details" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                      <% end %>
                      <%= link_to edit_admin_rsvp_path(invitee[:rsvp]), class: "text-gray-400 hover:text-gray-600 p-1 rounded-md hover:bg-gray-100", title: "Edit RSVP" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                      <% end %>
                      <%= link_to admin_rsvp_path(invitee[:rsvp]), method: :delete, 
                          confirm: "Are you sure you want to delete this RSVP?", 
                          class: "text-red-400 hover:text-red-600 p-1 rounded-md hover:bg-gray-100", 
                          title: "Delete RSVP" do %>
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                      <% end %>
                    <% else %>
                      <!-- Has not responded - show add response button -->
                      <%= link_to new_admin_rsvp_path(first_name: invitee[:first_name], last_name: invitee[:last_name]), 
                          class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded-md text-white bg-[#3f4f3d] hover:bg-[#2d3a2b] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#3f4f3d]", 
                          title: "Add Response for #{invitee[:name]}" do %>
                        <svg class="-ml-1 mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Add Response
                      <% end %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
