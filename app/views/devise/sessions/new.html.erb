<% content_for :title, "Admin Login" %>

<div class="min-h-screen bg-[#3f4f3d] flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="mt-6 text-center text-4xl font-bold text-white antic-didone-regular">
        Admin Login
      </h2>
      <p class="mt-4 text-center text-lg text-white/80 parisienne-regular">
        Wedding Management System
      </p>
      <div class="mt-4">
        <p class="text-white/60 pinyon-script-regular text-xl">Eric & Hayley</p>
        <p class="text-white/60 text-sm">10.18.25</p>
      </div>
    </div>
    
    <div class="bg-white/10 backdrop-blur-sm rounded-lg shadow-xl p-8 border border-white/20">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), local: true, html: { class: "mt-8 space-y-6" }) do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full px-4 py-3 border border-white/30 rounded-lg bg-white/20 backdrop-blur-sm text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent",
                placeholder: "Enter your email" %>
          </div>
          <div>
            <%= f.label :password, "Password", class: "block text-sm font-medium text-white mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-3 border border-white/30 rounded-lg bg-white/20 backdrop-blur-sm text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent",
                placeholder: "Enter your password" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-white/80 focus:ring-white/50 border-white/30 rounded bg-white/20" %>
              <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-white" %>
            </div>
          <% end %>

          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-white/80 hover:text-white underline" %>
          </div>
        </div>

        <div>
          <%= f.submit "Sign in", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-lg text-[#3f4f3d] bg-white hover:bg-white/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white/50 transition-all duration-200 antic-didone-regular" %>
        </div>
      <% end %>

      <div class="text-center mt-6">
        <%= link_to "â† Back to Wedding Site", root_path, class: "font-medium text-white/80 hover:text-white underline text-sm" %>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background: linear-gradient(135deg, #3f4f3d 0%, #2d3a2b 100%);
  }
</style>
