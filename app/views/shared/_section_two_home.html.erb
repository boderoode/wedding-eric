<div class="h-screen bg-[#3f4f3d] flex items-center justify-center">
  <div class="container mx-auto p-4">
    <h1 class="text-3xl md:text-4xl font-bold text-center text-white antic-didone-regular mb-16 md:mb-32">Our Schedule</h1>
    <div class="flex flex-wrap justify-center gap-8 md:gap-16 mb-16 md:mb-32">
      <!-- Ceremony -->
      <div class="flex flex-col items-center p-4 w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
        <%= image_tag 'wedding-ring.png', alt: 'Wedding Ring', class: 'w-1/2 md:w-3/4 h-auto object-cover' %>
        <p class="text-base md:text-lg text-white text-center mt-4 md:mt-8 antic-didone-regular">Ceremony is at 4pm at the garden gazebo</p>
      </div>
      <!-- Reception -->
      <div class="flex flex-col items-center p-4 w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
        <%= image_tag 'champagne.png', alt: 'Champagne', class: 'w-1/2 md:w-3/4 h-auto object-cover' %>
        <p class="text-base md:text-lg text-white text-center mt-4 md:mt-8 antic-didone-regular">Reception/cocktail hour following the ceremony at the main dining room and lake view room</p>
      </div>
      <!-- Food -->
      <div class="flex flex-col items-center p-4 w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
        <%= image_tag 'serving-dish.png', alt: 'Serving Dish', class: 'w-1/2 md:w-3/4 h-auto object-cover' %>
        <p class="text-base md:text-lg text-white text-center mt-4 md:mt-8 antic-didone-regular">Food is buffet style with dessert and snacks to follow</p>
      </div>
    </div>
  </div>
</div>